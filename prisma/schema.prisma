generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int              @id @default(autoincrement())
  email              String           @unique
  name               String
  password           String?
  sessionId          Int?
  profileImage       String           @default("")
  readReceiptId      Int?
  Type               UserType         @default(Pending)
  about              String?
  mobile             String?
  ReminderMembers_id Int?
  ActivityStatus     ActivityStatus?
  Joining            Joining[]
  SENT_MESSAGE       Message[]        @relation("SENT_MESSAGE")
  ReadReceipt        ReadReceipt[]
  Reminder           Reminder[]
  Request            Request[]
  Role               Role[]
  Session            Session?
  ReminderMembers    ReminderMembers? @relation(fields: [ReminderMembers_id], references: [id])
  Group              Group[]          @relation("GroupToUser")
}

model Session {
  id         Int     @id @default(autoincrement())
  session_id String  @unique
  extended   Boolean @default(false)
  userId     Int?    @unique
  User       User?   @relation(fields: [userId], references: [id])
}

model Group {
  id            Int         @id @default(autoincrement())
  name          String
  created_at    DateTime    @default(now())
  updated_at    DateTime
  userId        Int[]
  groupDetailId Int         @unique
  socketId      Int         @unique
  GroupDetail   GroupDetail @relation(fields: [groupDetailId], references: [id])
  Socket        Socket      @relation(fields: [socketId], references: [id])
  Joining       Joining[]
  Message       Message[]
  Reminder      Reminder[]
  Request       Request[]
  Role          Role[]
  User          User[]      @relation("GroupToUser")
}

model GroupDetail {
  id          Int           @id @unique @default(autoincrement())
  description String
  tags        GroupTokens[]
  icon        String        @default("")
  Group       Group?
}

model Socket {
  id        Int    @id @default(autoincrement())
  socket_id String @unique
  Group     Group?
}

model Message {
  id               Int            @id @default(autoincrement())
  created_at       DateTime       @default(now())
  senderId         Int
  groupId          Int?
  messageContentId Int
  status           MESSAGE_SATUS  @default(DELIVERED)
  readReceiptId    Int?
  Group            Group?         @relation(fields: [groupId], references: [id])
  content          MessageContent @relation(fields: [messageContentId], references: [id])
  sender           User           @relation("SENT_MESSAGE", fields: [senderId], references: [id])
  ReadReceipt      ReadReceipt[]
}

model MessageContent {
  id      Int                  @id @default(autoincrement())
  TYPE    MESSAGE_CONTENT_TYPE @default(TEXT)
  content String
  caption String?
  Message Message[]
}

model Request {
  id      String        @unique
  groupId Int
  userId  Int
  type    RequestType   @default(INVITE)
  invitee String
  role    RoleType      @default(MEMBER)
  message String        @default("")
  status  RequestStatus @default(PENDING)
  Group   Group         @relation(fields: [groupId], references: [id])
  User    User          @relation(fields: [userId], references: [id])
}

model Role {
  id      Int      @id @default(autoincrement())
  type    RoleType @default(MEMBER)
  userId  Int
  groupId Int
  Group   Group    @relation(fields: [groupId], references: [id])
  User    User     @relation(fields: [userId], references: [id])
}

model ActivityStatus {
  id     Int          @id @default(autoincrement())
  status UserActivity
  userId Int          @unique
  date   DateTime     @default(now())
  User   User         @relation(fields: [userId], references: [id])
}

model Joining {
  id        Int      @unique @default(autoincrement())
  timestamp DateTime
  userId    Int
  groupId   Int
  Group     Group    @relation(fields: [groupId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}

model ReadReceipt {
  id        Int           @unique @default(autoincrement())
  status    MessageStatus @default(Sent)
  messageId Int
  userId    Int
  Message   Message       @relation(fields: [messageId], references: [id])
  User      User          @relation(fields: [userId], references: [id])
}

model Reminder {
  id              Int              @id @default(autoincrement())
  notifyBefore    Boolean          @default(false)
  notifyApp       Boolean          @default(false)
  notifyWeb       Boolean          @default(false)
  message         String?
  title           String
  self            Boolean          @default(true)
  groupId         Int
  createdById     Int
  when            DateTime
  recurring       Boolean          @default(false)
  recurringDays   Days[]
  User            User             @relation(fields: [createdById], references: [id])
  Group           Group            @relation(fields: [groupId], references: [id])
  ReminderMembers ReminderMembers?
}

model ReminderMembers {
  id         Int      @id @default(autoincrement())
  reminderId Int      @unique
  Reminder   Reminder @relation(fields: [reminderId], references: [id])
  User       User[]
}

